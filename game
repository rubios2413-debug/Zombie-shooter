<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Zombie Shooter</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-user-select: none;
            user-select: none;
        }
        body {
            overflow: hidden;
            background: #1a1a1a;
            font-family: Arial, sans-serif;
        }
        #gameCanvas {
            display: block;
            background: #2d2d2d;
            touch-action: none;
        }
        #ui {
            position: absolute;
            top: 10px;
            left: 10px;
            color: white;
            font-size: 18px;
            text-shadow: 2px 2px 4px black;
        }
        #shop {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.9);
            padding: 20px;
            border-radius: 10px;
            color: white;
            display: none;
        }
        .upgrade-btn {
            display: block;
            margin: 10px 0;
            padding: 10px 20px;
            background: #4CAF50;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }
        .upgrade-btn:disabled {
            background: #666;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas"></canvas>
    <div id="ui">
        <div>Level: <span id="level">1</span></div>
        <div>Wave: <span id="wave">1</span></div>
        <div>Coins: <span id="coins">0</span></div>
        <div>HP: <span id="hp">100</span></div>
        <div>Score: <span id="score">0</span></div>
    </div>
    <div id="shop">
        <h2>Upgrades Shop</h2>
        <button class="upgrade-btn" id="upgradeDamage">Damage +10 (Cost: <span id="damageCost">50</span>)</button>
        <button class="upgrade-btn" id="upgradeFireRate">Fire Rate +20% (Cost: <span id="fireRateCost">75</span>)</button>
        <button class="upgrade-btn" id="upgradeHealth">Max HP +20 (Cost: <span id="healthCost">100</span>)</button>
        <button class="upgrade-btn" id="closeShop">Close Shop</button>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        // Game state
        let gameState = {
            player: {
                x: canvas.width / 2,
                y: canvas.height / 2,
                radius: 15,
                hp: 100,
                maxHp: 100,
                speed: 3,
                damage: 10,
                fireRate: 300,
                lastShot: 0
            },
            coins: 0,
            score: 0,
            level: 1,
            wave: 1,
            zombies: [],
            bullets: [],
            particles: [],
            isPaused: false,
            touchStart: null,
            shootTarget: null,
            upgradeCosts: {
                damage: 50,
                fireRate: 75,
                health: 100
            }
        };

        // Touch controls
        let moveJoystick = { active: false, x: 0, y: 0, startX: 0, startY: 0 };
        let shootJoystick = { active: false, x: 0, y: 0 };

        canvas.addEventListener('touchstart', handleTouchStart, { passive: false });
        canvas.addEventListener('touchmove', handleTouchMove, { passive: false });
        canvas.addEventListener('touchend', handleTouchEnd, { passive: false });

        function handleTouchStart(e) {
            e.preventDefault();
            Array.from(e.changedTouches).forEach(touch => {
                if (touch.clientX < canvas.width / 2) {
                    moveJoystick.active = true;
                    moveJoystick.startX = touch.clientX;
                    moveJoystick.startY = touch.clientY;
                } else {
                    shootJoystick.active = true;
                    shootJoystick.x = touch.clientX;
                    shootJoystick.y = touch.clientY;
                }
            });
        }

        function handleTouchMove(e) {
            e.preventDefault();
            Array.from(e.changedTouches).forEach(touch => {
                if (touch.clientX < canvas.width / 2 && moveJoystick.active) {
                    moveJoystick.x = touch.clientX - moveJoystick.startX;
                    moveJoystick.y = touch.clientY - moveJoystick.startY;
                }
            });
        }

        function handleTouchEnd(e) {
            e.preventDefault();
            Array.from(e.changedTouches).forEach(touch => {
                if (touch.clientX < canvas.width / 2) {
                    moveJoystick.active = false;
                    moveJoystick.x = 0;
                    moveJoystick.y = 0;
                } else {
                    shootJoystick.active = false;
                }
            });
        }

        // Zombie spawning
        function spawnZombie() {
            const side = Math.floor(Math.random() * 4);
            let x, y;
            
            switch(side) {
                case 0: x = Math.random() * canvas.width; y = -20; break;
                case 1: x = canvas.width + 20; y = Math.random() * canvas.height; break;
                case 2: x = Math.random() * canvas.width; y = canvas.height + 20; break;
                case 3: x = -20; y = Math.random() * canvas.height; break;
            }

            const types = ['basic', 'fast', 'tank'];
            const type = types[Math.floor(Math.random() * Math.min(gameState.wave, 3))];
            
            let zombie = { x, y, radius: 12 };
            
            switch(type) {
                case 'basic':
                    zombie.hp = 100;
                    zombie.speed = 1;
                    zombie.damage = 10;
                    zombie.coins = 10;
                    zombie.color = '#5a8f5a';
                    break;
                case 'fast':
                    zombie.hp = 75;
                    zombie.speed = 2;
                    zombie.damage = 15;
                    zombie.coins = 15;
                    zombie.color = '#8f5a5a';
                    break;
                case 'tank':
                    zombie.hp = 200;
                    zombie.speed = 0.7;
                    zombie.damage = 20;
                    zombie.coins = 25;
                    zombie.color = '#5a5a8f';
                    break;
            }
            
            gameState.zombies.push(zombie);
        }

        // Shooting
        function shoot() {
            const now = Date.now();
            if (now - gameState.player.lastShot < gameState.player.fireRate) return;
            if (!shootJoystick.active) return;

            const dx = shootJoystick.x - gameState.player.x;
            const dy = shootJoystick.y - gameState.player.y;
            const distance = Math.sqrt(dx * dx + dy * dy);

            gameState.bullets.push({
                x: gameState.player.x,
                y: gameState.player.y,
                vx: (dx / distance) * 8,
                vy: (dy / distance) * 8,
                radius: 5
            });

            gameState.player.lastShot = now;
        }

        // Update game
        function update() {
            if (gameState.isPaused) return;

            // Move player
            if (moveJoystick.active) {
                const magnitude = Math.sqrt(moveJoystick.x ** 2 + moveJoystick.y ** 2);
                if (magnitude > 0) {
                    gameState.player.x += (moveJoystick.x / magnitude) * gameState.player.speed;
                    gameState.player.y += (moveJoystick.y / magnitude) * gameState.player.speed;
                }
            }

            // Keep player in bounds
            gameState.player.x = Math.max(gameState.player.radius, Math.min(canvas.width - gameState.player.radius, gameState.player.x));
            gameState.player.y = Math.max(gameState.player.radius, Math.min(canvas.height - gameState.player.radius, gameState.player.y));

            // Shoot
            shoot();

            // Update bullets
            gameState.bullets = gameState.bullets.filter(bullet => {
                bullet.x += bullet.vx;
                bullet.y += bullet.vy;
                return bullet.x > 0 && bullet.x < canvas.width && bullet.y > 0 && bullet.y < canvas.height;
            });

            // Update zombies
            gameState.zombies.forEach(zombie => {
                const dx = gameState.player.x - zombie.x;
                const dy = gameState.player.y - zombie.y;
                const distance = Math.sqrt(dx * dx + dy * dy);

                zombie.x += (dx / distance) * zombie.speed;
                zombie.y += (dy / distance) * zombie.speed;

                // Check collision with player
                if (distance < gameState.player.radius + zombie.radius) {
                    gameState.player.hp -= zombie.damage * 0.1;
                    if (gameState.player.hp <= 0) {
                        alert('Game Over! Score: ' + gameState.score);
                        location.reload();
                    }
                }
            });

            // Bullet-zombie collision
            gameState.bullets.forEach((bullet, bIndex) => {
                gameState.zombies.forEach((zombie, zIndex) => {
                    const dx = bullet.x - zombie.x;
                    const dy = bullet.y - zombie.y;
                    const distance = Math.sqrt(dx * dx + dy * dy);

                    if (distance < bullet.radius + zombie.radius) {
                        zombie.hp -= gameState.player.damage;
                        gameState.bullets.splice(bIndex, 1);

                        if (zombie.hp <= 0) {
                            gameState.coins += zombie.coins;
                            gameState.score += zombie.coins;
                            gameState.zombies.splice(zIndex, 1);
                        }
                    }
                });
            });

            // Spawn zombies
            if (Math.random() < 0.02 * gameState.wave) {
                spawnZombie();
            }

            // Next wave
            if (gameState.zombies.length === 0 && gameState.score > gameState.wave * 100) {
                gameState.wave++;
                if (gameState.wave % 5 === 0) gameState.level++;
            }

            updateUI();
        }

        // Render
        function render() {
            ctx.fillStyle = '#2d2d2d';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Draw player
            ctx.fillStyle = '#4CAF50';
            ctx.beginPath();
            ctx.arc(gameState.player.x, gameState.player.y, gameState.player.radius, 0, Math.PI * 2);
            ctx.fill();

            // Draw zombies
            gameState.zombies.forEach(zombie => {
                ctx.fillStyle = zombie.color;
                ctx.beginPath();
                ctx.arc(zombie.x, zombie.y, zombie.radius, 0, Math.PI * 2);
                ctx.fill();
            });

            // Draw bullets
            ctx.fillStyle = '#FFD700';
            gameState.bullets.forEach(bullet => {
                ctx.beginPath();
                ctx.arc(bullet.x, bullet.y, bullet.radius, 0, Math.PI * 2);
                ctx.fill();
            });

            // Draw controls indicator
            ctx.fillStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.fillRect(0, 0, canvas.width / 2, canvas.height);
            ctx.fillText('MOVE', 50, 50);
            ctx.fillText('SHOOT', canvas.width - 100, 50);
        }

        function updateUI() {
            document.getElementById('level').textContent = gameState.level;
            document.getElementById('wave').textContent = gameState.wave;
            document.getElementById('coins').textContent = gameState.coins;
            document.getElementById('hp').textContent = Math.floor(gameState.player.hp);
            document.getElementById('score').textContent = gameState.score;
        }

        // Shop system
        document.getElementById('upgradeDamage').addEventListener('click', () => {
            if (gameState.coins >= gameState.upgradeCosts.damage) {
                gameState.coins -= gameState.upgradeCosts.damage;
                gameState.player.damage += 10;
                gameState.upgradeCosts.damage = Math.floor(gameState.upgradeCosts.damage * 1.5);
                document.getElementById('damageCost').textContent = gameState.upgradeCosts.damage;
            }
        });

        document.getElementById('upgradeFireRate').addEventListener('click', () => {
            if (gameState.coins >= gameState.upgradeCosts.fireRate) {
                gameState.coins -= gameState.upgradeCosts.fireRate;
                gameState.player.fireRate = Math.max(50, gameState.player.fireRate * 0.8);
                gameState.upgradeCosts.fireRate = Math.floor(gameState.upgradeCosts.fireRate * 1.5);
                document.getElementById('fireRateCost').textContent = gameState.upgradeCosts.fireRate;
            }
        });

        document.getElementById('upgradeHealth').addEventListener('click', () => {
            if (gameState.coins >= gameState.upgradeCosts.health) {
                gameState.coins -= gameState.upgradeCosts.health;
                gameState.player.maxHp += 20;
                gameState.player.hp = gameState.player.maxHp;
                gameState.upgradeCosts.health = Math.floor(gameState.upgradeCosts.health * 1.5);
                document.getElementById('healthCost').textContent = gameState.upgradeCosts.health;
            }
        });

        document.getElementById('closeShop').addEventListener('click', () => {
            document.getElementById('shop').style.display = 'none';
            gameState.isPaused = false;
        });

        // Game loop
        function gameLoop() {
            update();
            render();
            requestAnimationFrame(gameLoop);
        }

        // Start game
        gameLoop();
    </script>
</body>
</html>
